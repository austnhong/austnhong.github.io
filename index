<script>
document.getElementById('year').textContent = new Date().getFullYear();
fetch('projects.json')
  .then(r => r.json())
  .then(items => {
    const root = document.getElementById('projects');
    items.forEach(p => {
      const el = document.createElement('article');
      el.className = 'card';
      el.innerHTML = `
        <h3><a href="${p.link}" target="_blank" rel="noopener">${p.title}</a></h3>
        <p>${p.blurb}</p>
        <div>${p.tags.map(t=>`<span class="pill">${t}</span>`).join('')}</div>
      `;
      root.appendChild(el);
    });
  })
  .catch(()=>{ document.getElementById('projects').innerHTML = '<p>Add a projects.json file to populate this section.</p>'; });
</script>
